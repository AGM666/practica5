<?php
	session_start();
	if(isset($_POST["usuario"],$_POST["pass"]) && $_POST["usuario"]!="" && $_POST["pass"]!=""){
		//isset es una funci칩n sobrecargada que permite recibir multiples par치metros para evitar hacer validaciones valor por valor y unirlo con operadores l칩gicos
		if($_POST["usuario"]=="admin" && $_POST["pass"]="1234"){
			$_SESSION["usuario"]=$_POST["usuario"];//Creo la sesi칩n simplemente asignandola a la superglobal $_SESSION

		?>
			<script>
				document.location.href="menu.php";
			</script>
		<?php		
		}
		else{
		?> 
			<script>
				alert("Usuario o password invalidos");//Permite abrir ventanas emergentes con un texto con JS
				document.location.href="login.php";
			</script>
		<?php
		}

	}
	else{
	?>
		<script>
			alert("No se ha logeado nunca o coloco datos en blanco al ingresar");
			document.location.href="login.php";
		</script>
	<?php
	}

?>
